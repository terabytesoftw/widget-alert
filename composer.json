{
    "name": "terabytesoftw/widget-alert",
    "type": "yii2-extension",
    "description": "Widget Alert with Bootstrap4",
    "keywords": [
        "alert",
        "bootstrap4",
        "widget",
        "yii"
    ],
    "homepage": "https://github.com/terabytesoftw/alert",
    "license": "BSD-3-Clause",
    "authors": [
        {
            "name": "Wilmer Arambula",
            "email": "wilmer.arambula@gmail.com"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
		"php": ">=5.4.0",
        "oomphinc/composer-installers-extender": "^1.1",
        "yiisoft/yii2": "^2.0.20",
        "yiisoft/yii2-bootstrap4": "^2.0.3"
    },
    "require-dev": {
        "codeception/codeception": "^3.0",
        "codeception/c3": "2.*",
        "hiqdev/composer-config-plugin": "^1.0@dev",
        "monolog/monolog": "*"
	},
    "autoload": {
		"psr-4": {"terabytesoft\\widgets\\": "src"}
    },
    "autoload-dev": {
        "psr-4": {"terabyteSoft\\widgets\\tests\\": "tests"}
    },
    "config": {
        "fxp-asset": {
            "enabled": false
		},
		"process-timeout": 1800
    },
    "extra": {
        "branch-alias": {
            "1.0": "1.0.x-dev"
        },
        "installer-types": [
            "bower-asset",
            "npm-asset"
        ],
        "installer-paths": {
            "./node_modules/{$name}": [
                "type:bower-asset",
                "type:npm-asset"
            ]
        }
    },
    "repositories": [
        {
            "type": "composer",
            "url": "https://asset-packagist.org"
        }
    ]
}
